<h1>5xRuby Book Store</h1>

<%= notice %>

    <%= link_to 'Create Book', new_book_path %>

        <table>
            <tr>
                <td>name</td>
                <td>price</td>
                <td>action</td>
            </tr>
        </table>

        <table>
            <tr>
                <% @book.each do |book| %>
                    <td>
                        <%= book.name %>
                    </td>
                    <td>
                        <%= book.price %>
                    </td>
                    <td>
                        <%= link_to 'Update', edit_book_path(book.id) %>
                    </td>
                    <td>
                        <%= link_to 'Delete', book_path(book.id), method: 'delete', data: {confirm: 'Are you sure?'} %>
                    </td>
            </tr>
            <% end %>
        </table>